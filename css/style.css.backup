@import url('https://fonts.googleapis.com/css2?family=Google+Sans+Flex:wght@100..900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap');
@import url('https://fonts.googleapis.com/css?family=Anton&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Righteous&display=swap');
@import url('bookmark.css');

:root {
    /* Color System */
    --color-primary: #F3C623;
    --color-bg-primary: #0f0f0f;
    --color-bg-secondary: #161616;
    --color-text-primary: #ffffff;
    --color-text-secondary: #F3C623;
    --color-text-muted: #393939;

    /* UI Colors */
    --color-nav-bg: rgba(20, 20, 20, 0.6);
    --color-modal-overlay: rgba(0, 0, 0, 0.9);
    --color-modal-content: #000000;
    --color-border-subtle: rgba(255, 255, 255, 0.08);
    --color-overlay-frosted: rgba(20, 20, 20, 0.85);

    /* Typography */
    --font-main: "Google Sans Flex", sans-serif;
    --font-display: "Anton", sans-serif;
    --font-accent: "Quicksand", sans-serif;

    /* Spacing & Layout */
    --border-radius-sm: 0.75rem;
    --border-radius-md: 1.56rem;
    --border-radius-lg: 2.5rem;

    /* Animation */
    --transition-base: 0.3s ease;

    /* Z-Index Scale */
    --z-card-base: 1;
    --z-card-overlay: 10;
    --z-card-badge: 20;
    --z-card-hover: 30;

    /* New Text Colors */
    --color-text-body: rgba(255, 255, 255, 0.9);
}

/* Accessibility Utilities */
.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
}

.skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--color-primary);
    color: var(--color-bg-primary);
    padding: 8px 16px;
    text-decoration: none;
    z-index: 9999;
    font-weight: bold;
    transition: top 0.3s ease;
}

.skip-link:focus {
    top: 0;
    outline: 3px solid #ffffff;
}

/* Focus Styles */
*:focus-visible {
    outline: 3px solid var(--color-primary);
    outline-offset: 4px;
}

.content-card:focus-visible {
    outline: 3px solid var(--color-primary);
    outline-offset: 4px;
    transform: translateY(-5px);
    box-shadow: 0 0 25px rgba(243, 198, 35, 0.3);
}

html,
body {
    margin: 0;
    padding: 0;
    background-color: var(--color-bg-primary);
    /* overflow properties removed to allow sticky positioning to work */
    font-family: var(--font-main);
    color: var(--color-text-primary);
    font-size: 80%;
    /* Global scale factor (approx 14.4px base) */
}

.debug {
    background-color: hotpink !important;
}

.debug h1 {
    border: 1px solid black;
    overflow: visible;
}

.debug h2 {
    color: red;
    z-index: 2;
}

/* Hero section with animated text */
.hero-container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    width: 100%;
    padding-top: 0.75rem;
    /* Reduced from 4.68rem */
    padding-bottom: 0.75rem;
    /* Reduced by 40% from 20px */
    position: relative;
    flex-direction: column;
    align-items: center;
}

.central-wrapper {
    display: flex;
    flex-direction: column;
    width: fit-content;
    margin: 0 auto;
}

/* Content Preview Outline */
.content-preview {
    border: 1px solid var(--color-text-primary);
    width: 100%;
    margin: 40px auto 0;
    display: flex;
    flex-direction: column;
}

.preview-segment {
    border-bottom: 1px solid var(--color-text-primary);
    padding: 15px;
    font-family: var(--font-main);
    text-transform: uppercase;
    text-align: center;
    font-size: 18px;
    letter-spacing: 1px;
}

.preview-segment:last-child {
    border-bottom: none;
}

h2 {
    text-transform: uppercase;
    font-family: var(--font-display);
    text-align: center;
    margin: 0;
    position: relative;
    overflow: hidden;
    color: var(--color-text-primary);
    font-size: 2.4vw;
    letter-spacing: 4.8vw;
    padding-left: 0;
}

/* MIDLOOP Text Styles */
.midloop-text {
    font-size: 8vw;
    color: var(--color-text-primary);
    font-family: var(--font-main);
    font-weight: 900;
    text-align: center;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0em;
    display: none;
}

.dg.a.main {
    margin-right: 0;
}

/* Navigation Menu */
.top-nav {
    width: 100%;
    padding: 0.625rem 0 0.625rem 0;
    background-color: transparent;
    margin-top: 0;
    margin-bottom: 3.75rem;
    /* Increased gap between nav and cards */
    position: sticky;
    top: 2.18rem;
    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.25rem;
}

.nav-list {
    display: flex;
    justify-content: center;
    align-items: center;
    list-style: none;
    margin: 0;
    gap: 1.25rem;

    /* Pill shape styling */
    background-color: var(--color-nav-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 2.5rem;
    padding: 1.25rem 2.5rem;
    border: 1px solid var(--color-border-subtle);
}

.bookmarks-icon-container {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-nav-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 2.5rem;
    padding: 1.25rem 1.5rem;
    border: 1px solid var(--color-border-subtle);
}

.bookmarks-icon-link {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-primary);
    transition: color 0.3s ease, transform 0.3s ease;
    cursor: pointer;
}

.bookmarks-icon-link:hover,
.bookmarks-icon-link.active {
    color: var(--color-primary);
    transform: scale(1.1);
}

.bookmarks-icon-link svg {
    display: block;
}

.nav-link {
    font-family: var(--font-main);
    /* Reverted to Anton */
    font-size: 1.75rem;
    color: var(--color-text-primary);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: opacity 0.3s;
    display: flex;
    align-items: center;
    font-weight: 800;
}

.nav-item {
    position: relative;
}

.nav-link:hover,
.nav-item .nav-link.active,
/* Added active class support directly on link if applied there */
.nav-item.active .nav-link {
    opacity: 1;
    color: var(--color-primary);
}

/* Arrow Indicator */
.arrow {
    border: solid var(--color-text-primary);
    border-width: 0 2px 2px 0;
    display: inline-block;
    padding: 4px;
    margin-left: 10px;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    transition: transform 0.3s ease;
    margin-bottom: 4px;
}

.nav-item.active .arrow {
    transform: rotate(225deg);
    -webkit-transform: rotate(225deg);
    border-color: var(--color-primary);
}

/* Dropdown Menu - REMOVED as per design update */
/* .dropdown-content styles removed */

/* Movies Section */
.movies-section {
    max-width: 87.5rem;
    margin: 0 auto;
    padding: 2.5rem 2.5rem 1.25rem 2.5rem;
    /* Reduced top padding to move nav higher */
    text-align: center;
    /* Ensure content is centered */
}

.section-title {
    font-family: var(--font-main);
    font-size: 4.5rem;
    /* Increased by ~30% more */
    text-align: center;
    margin-bottom: 1.875rem;
    /* Reduced from 50px */
    letter-spacing: 3px;
    /* Resetting letter spacing to be reasonable */
    color: var(--color-primary);
    text-transform: uppercase;
    display: none;
    /* Hidden but not deleted display: flex; before */
    justify-content: center;
    align-items: center;
    width: 100%;
    gap: 0.93rem;
    padding: 0;
    /* Ensure no padding affects centering */
}

.movies-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(15.6rem, 1fr));
    gap: 1.875rem;
    margin-bottom: 3.75rem;
}

.content-card {
    background-color: transparent;
    border-radius: 1.56rem;
    overflow: hidden;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
    will-change: transform;
}

.content-card:hover {
    transform: scale(1.05);
    z-index: var(--z-card-hover);
}

.content-poster {
    position: relative;
    width: 100%;
    padding-top: 150%;
    /* Aspect ratio */
    overflow: hidden;
    background-color: var(--color-bg-secondary);
    flex-shrink: 0;
}

.content-poster img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform;
}

/* New Content Card Overlay Styles */
.content-details-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-overlay-frosted);
    border-top: 1px solid var(--color-border-subtle);
    padding: 0.875rem 1.25rem 0.5rem 1.25rem;
    box-sizing: border-box;
    transition: opacity 0.3s ease;
    z-index: var(--z-card-overlay);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    opacity: 0;
    gap: 0.375rem;
}

.content-header {
    display: flex;
    flex-direction: column;
    gap: 0.45rem;
    text-align: left;
    align-items: flex-start;
}

.content-title {
    font-family: var(--font-main);
    font-size: 1.3rem;
    margin: 0;
    color: var(--color-text-primary);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1.2;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    white-space: normal;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
}

.content-genre {
    font-family: var(--font-main);
    font-size: 1rem;
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.content-rating {
    font-family: var(--font-main);
    font-size: 1rem;
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.content-body {
    display: block;
}

.content-synopsis {
    font-family: var(--font-main);
    font-size: 1.1rem;
    color: var(--color-text-body);
    line-height: 1.5;
    margin: 0 0 0.25rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-align: left;
}

.tba-text {
    position: absolute;
    top: 30%;
    left: 0;
    width: 100%;
    text-align: center;
    font-family: var(--font-main);
    font-size: 0.9rem;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
    z-index: var(--z-card-badge);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
    transform: translateY(-50%);
}

.content-card:hover .tba-text {
    opacity: 1;
}

/* Stacked Date Badge */
.content-date-stacked {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(20, 20, 20, 0.9);
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
    border: 1px solid var(--color-border-subtle);
    border-radius: 0.75rem;
    padding: 0.75rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    z-index: var(--z-card-badge);
}

.date-month {
    font-family: var(--font-main);
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-primary);
    line-height: 1;
    margin-bottom: 0.2rem;
}

.date-day {
    font-family: var(--font-display);
    font-size: 2.2rem;
    color: var(--color-text-primary);
    line-height: 1;
}

.special-release-text {
    font-family: var(--font-main);
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-primary);
    line-height: 1.2;
    margin-top: 0.5rem;
    text-align: center;
    display: block;
    padding-top: 0.5rem;
    border-top: 1px solid var(--color-border-subtle);
}

.content-date-stacked.has-special-release {
    animation: pulseBadge 2s infinite;
}

@keyframes pulseBadge {

    0%,
    100% {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3), 0 0 0 0 rgba(243, 198, 35, 0.4);
    }

    50% {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3), 0 0 0 8px rgba(243, 198, 35, 0);
    }
}

.more-details-indicator::before {
    display: none;
}

/* Hover Effects */
.content-card:hover .content-details-overlay {
    opacity: 1;
}





/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-modal-overlay);
    align-items: center;
    justify-content: center;
    padding: 1.25rem;
}

.modal-content {
    background-color: var(--color-modal-content);
    /* Enforce a fixed modal size to prevent dynamic resizing */
    width: 900px;
    min-width: 900px;
    max-width: 900px;
    height: 600px;
    min-height: 600px;
    max-height: 600px;
    border-radius: 0.75rem;
    overflow: hidden; /* Prevent the modal itself from growing */
    position: relative;
    display: flex;
    flex-direction: row;
    box-shadow: 0 1.25rem 3.125rem rgba(0, 0, 0, 0.5);
    box-sizing: border-box;
}

.card_left {
    /* Fixed pane width to avoid layout shifts when images load */
    width: 360px; /* 40% of 900px modal */
    min-width: 360px;
    max-width: 360px;
    height: 100%;
    position: relative;
    overflow: hidden;
}

.card_left img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.card_right {
    /* Remaining width for right pane */
    width: calc(100% - 360px);
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    text-align: left;
    overflow-y: auto; /* Keep the right pane scrollable without resizing the modal */
}

.close-modal {
    position: absolute;
    top: 1.25rem;
    right: 1.875rem;
    color: var(--color-text-primary);
    font-size: 2.5rem;
    font-weight: bold;
    cursor: pointer;
    z-index: 10;
    transition: color 0.3s;
    line-height: 1;
    background: none;
    border: none;
    padding: 0;
}

.close-modal:hover {
    color: var(--color-primary);
}

.modal-nav {
    background: transparent;
    border: none;
    color: var(--color-text-secondary);
    font-size: 4rem;
    cursor: pointer;
    transition: color 0.3s ease, transform 0.3s ease;
    padding: 0 1.25rem;
    z-index: 1001;
    font-family: var(--font-display);
    display: flex;
    align-items: center;
    justify-content: center;
    height: 6.25rem;
}

.modal-nav:hover {
    color: var(--color-primary);
    transform: scale(1.1);
}

.modal-nav-prev {
    margin-right: 0.625rem;
}

.modal-nav-next {
    margin-left: 0.625rem;
}

#modal-title {
    font-family: var(--font-main);
    font-size: 3.5rem;
    margin: 0 0 0.625rem 0;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 2px;
    text-align: left;
    line-height: 1.1;
    height: auto;
}

.card_right__details ul {
    list-style: none;
    padding: 0;
    margin: 0 0 1.25rem 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem;
    color: var(--color-primary);
    font-family: var(--font-main);
    font-size: 0.9rem;
}

.card_right__details ul li {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
}

/* Modal metadata: hide labels and surface only the values in primary yellow */
.card_right__details .detail-label {
    display: none;
}

.card_right__details .detail-value {
    color: var(--color-primary);
    font-weight: 700;
    font-size: 0.95rem;
}

.detail-label {
    font-family: var(--font-main);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-primary);
    font-weight: 700;
}

.detail-value {
    font-family: var(--font-main);
    font-size: 1rem;
    color: var(--color-text-primary);
    font-weight: 500;
    line-height: 1.2;
}

.card_right__review p {
    font-family: var(--font-main);
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-text-primary);
    margin: 0;
    text-align: left;
}

/* Modal Overview Section */
.modal-overview-section {
    margin-top: 1.25rem;
    padding-top: 1.25rem;
    border-top: 1px solid var(--color-border-subtle);
}

.modal-section-heading {
    font-family: var(--font-main);
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-primary);
    margin: 0 0 1rem 0;
    position: relative;
    padding-bottom: 0.75rem;
}

.modal-section-heading::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 2px;
    background: var(--color-primary);
}

.modal-overview-text {
    font-family: var(--font-main);
    font-size: 0.95rem;
    line-height: 1.8;
    color: var(--color-text-body);
    margin: 0;
    text-align: left;
    max-height: 180px;
    overflow-y: auto;
    padding-right: 0.5rem;
}

/* Custom scrollbar for overview text */
.modal-overview-text::-webkit-scrollbar {
    width: 6px;
}

.modal-overview-text::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 3px;
}

.modal-overview-text::-webkit-scrollbar-thumb {
    background: rgba(243, 198, 35, 0.3);
    border-radius: 3px;
}

.modal-overview-text::-webkit-scrollbar-thumb:hover {
    background: rgba(243, 198, 35, 0.5);
}

/* Modal Flexible Details Section */
.modal-flexible-section {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border-subtle);
}

.modal-flexible-section:empty {
    display: none;
}

.modal-details-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
    margin-top: 0;
}

.modal-detail-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--border-radius-sm);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

/* Large cards (top row) */
.modal-detail-card.large {
    padding: 1.5rem;
    min-height: 100px;
}

/* Small cards (bottom row) */
.modal-detail-card.small {
    padding: 1rem;
    min-height: 70px;
}

/* Default size if no class specified */
.modal-detail-card:not(.large):not(.small) {
    padding: 1.25rem;
}


.modal-detail-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--color-primary) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.modal-detail-card:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(243, 198, 35, 0.3);
    transform: translateY(-2px);
}

.modal-detail-card:hover::before {
    opacity: 1;
}

.detail-card-label {
    font-family: var(--font-main);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--color-primary);
    font-weight: 700;
    opacity: 0.9;
}

.detail-card-value {
    font-family: var(--font-main);
    font-size: 0.9rem;
    color: var(--color-text-primary);
    font-weight: 500;
    line-height: 1.5;
}

/* Special styling for list-type values (if you want to display arrays) */
.detail-card-value.list-style {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.detail-card-value.list-style span {
    background: rgba(243, 198, 35, 0.12);
    padding: 0.35rem 0.85rem;
    border-radius: 1.25rem;
    border: 1px solid rgba(243, 198, 35, 0.25);
    font-size: 0.95rem;
    transition: all 0.2s ease;
}

.detail-card-value.list-style span:hover {
    background: rgba(243, 198, 35, 0.2);
    border-color: rgba(243, 198, 35, 0.4);
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .modal-details-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .modal-section-heading {
        font-size: 1.1rem;
    }

    .modal-overview-text {
        font-size: 1rem;
    }

    .modal-detail-card.large {
        padding: 1.25rem;
        min-height: 85px;
    }

    .modal-detail-card.small {
        padding: 0.9rem;
        min-height: 60px;
    }
}

@media (max-width: 480px) {
    .modal-details-grid {
        grid-template-columns: 1fr;
        gap: 0.875rem;
    }

    .modal-detail-card.large {
        padding: 1.15rem;
        min-height: 75px;
    }

    .modal-detail-card.small {
        padding: 0.85rem;
        min-height: 55px;
    }
}


.error-message {
    text-align: center;
    font-family: var(--font-main);
    color: var(--color-primary);
    font-size: 1.2rem;
    padding: 40px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .nav-list {
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .midloop-text {
        font-size: 15vw;
    }

    .section-title {
        font-size: 2rem;
    }

    .movies-grid {
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
    }

    .modal-body {
        grid-template-columns: 1fr;
        padding: 30px 20px;
    }

    #modal-poster {
        max-width: 300px;
        margin: 0 auto;
    }

    .close-modal {
        top: 10px;
        right: 15px;
        font-size: 30px;
    }

    /* Responsive fallback: allow modal to scale down on small viewports */
    .modal-content {
        width: calc(100% - 2rem);
        min-width: auto;
        max-width: calc(100% - 2rem);
        height: calc(80vh);
        min-height: auto;
        max-height: calc(80vh);
    }
}



/* Footer Styles */
.footer-container {
    display: flex;
    justify-content: center;
    padding: 0 2.5rem 2.5rem 2.5rem;
    background-color: var(--color-bg-primary);
    margin-top: 3.75rem;
}

.footer-content {
    background-color: var(--color-nav-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 2.5rem;
    padding: 1.25rem 2.5rem;
    border: 1px solid var(--color-border-subtle);
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 82.5rem;
    position: relative;
    box-shadow: 0 0.625rem 1.875rem rgba(0, 0, 0, 0.3);
}

.brand-logo-btn {
    background: transparent;
    border: none;
    color: var(--color-text-primary);
    font-family: var(--font-main);
    font-size: 2rem;
    font-weight: 900;
    cursor: pointer;
    padding: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    position: relative;
}

.brand-logo-btn:hover {
    color: var(--color-primary);
    text-shadow: 0 0 1.25rem rgba(243, 198, 35, 0.4);
    transform: scale(1.02);
}

.copyright-text {
    color: var(--color-text-muted);
    font-family: var(--font-main);
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-transform: uppercase;
}

.scroll-to-top {
    background-color: transparent;
    color: var(--color-primary);
    border: 1px solid rgba(243, 198, 35, 0.3);
    border-radius: 3.125rem;
    cursor: pointer;
    padding: 0.75rem 1.75rem;
    font-family: var(--font-main);
    font-weight: 700;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.scroll-to-top:hover {
    background-color: var(--color-primary);
    color: var(--color-modal-content);
    border-color: var(--color-primary);
    box-shadow: 0 0 20px rgba(243, 198, 35, 0.2);
    transform: translateY(-2px);
}

/* Floating heart animation with snaking motion and balloon pop */
@keyframes floatHeart {
    0% {
        transform: translate(0, 0) scale(1);
        opacity: 1;
    }

    15% {
        transform: translate(1.25rem, -1.875rem) scale(1.1);
        opacity: 1;
    }

    30% {
        transform: translate(-0.93rem, -3.75rem) scale(1.2);
        opacity: 1;
    }

    45% {
        transform: translate(1.56rem, -5.625rem) scale(1.3);
        opacity: 1;
    }

    60% {
        transform: translate(-0.625rem, -7.5rem) scale(1.4);
        opacity: 1;
    }

    75% {
        transform: translate(0.93rem, -9.375rem) scale(1.5);
        opacity: 1;
    }

    85% {
        transform: translate(0, -10.625rem) scale(1.8);
        opacity: 1;
    }

    92% {
        transform: translate(0, -10.93rem) scale(2.2);
        opacity: 0.8;
    }

    100% {
        transform: translate(0, -11.25rem) scale(0);
        opacity: 0;
    }
}

.floating-heart {
    position: fixed;
    font-size: 2rem;
    pointer-events: none;
    z-index: 9999;
    animation: floatHeart 2.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
}

/* Responsive footer */
@media (max-width: 768px) {
    .footer-content {
        flex-direction: column;
        padding: 30px 20px;
        gap: 25px;
        text-align: center;
    }

    .copyright-text {
        order: 3;
        font-size: 0.8rem;
    }

    .scroll-to-top {
        order: 2;
        width: 100%;
        justify-content: center;
    }

    .brand-logo-btn {
        order: 1;
        font-size: 2.5rem;
    }
}




/* Minimalistic Genre Tag on Movie Card */
.movie-genre-tag {
    position: absolute;
    bottom: 0.93rem;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.95);
    font-family: var(--font-main);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    background: rgba(0, 0, 0, 0.5);
    padding: 0.375rem 0.875rem;
    border-radius: 6.25rem;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    z-index: 2;
    pointer-events: none;
    box-shadow: 0 0.25rem 0.625rem rgba(0, 0, 0, 0.2);
    transition: opacity 0.3s ease;
}

/* Hide genre tag on hover so it doesn't conflict with overlay content */
.movie-card:hover .movie-genre-tag {
    opacity: 0;
}

/* New Text Animation Styles */
.header__title {
    /* Inherits font-size from .section-title */
    line-height: 1;
    flex-flow: row wrap !important;
